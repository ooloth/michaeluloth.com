---
import nav from '../data/nav'
---

<footer class="flex flex-col items-center sm:flex-row sm:items-baseline sm:justify-between mt-20 text-base">
  <p>&copy; {new Date().getFullYear()} Michael Uloth</p>

  <nav class="mt-3">
    <ul class="flex flex-wrap justify-start">
      {
        nav.bottom.map(item => (
          <li class="mx-2 sm:ms-2">
            <a href={item.url} target="_blank" class="link-nav">
              {item.title}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</footer>
