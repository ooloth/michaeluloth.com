---
import nav from '../data/nav'
---

<footer
  class="flex flex-col gap-3 items-center sm:flex-row sm:items-baseline sm:justify-between mt-20 bg-zinc-900 py-7 w-100 text-base"
>
  <p class="text-zinc-300">&copy; {new Date().getFullYear()} Michael Uloth</p>

  <nav>
    <ul class="flex flex-wrap justify-start">
      {
        nav.bottom.map(item => (
          <li class="mx-2 sm:ms-2 sm:me-0">
            <a href={item.url} target="_blank" class="link-nav">
              {item.title}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</footer>
